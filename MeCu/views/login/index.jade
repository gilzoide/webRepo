extends ../layout

block title
  title MeCu Login

block styles
  link(rel="stylesheet", href="styles/login.css")

block body
  // Logo do sistema
  .jumbotron.loginPage
    img.img-responsive.center-block(src='images/logo.png' alt='MeCuLogo')
  // Login/Register
  .container
    .row
      .col-md-6
        form(action='/login' method='post')
          .form-group.loginForm
            label Login
            input.form-control(name='username' placeholder='Apelido')
            input.form-control(name='password' type='password' placeholder='Senha')
          button.btn.btn-default(type='submit') Logar!
      .col-md-6
        form(action='/register' method='post')
          .form-group.loginForm
            label Registrar
            input.form-control(name='username' placeholder='Apelido')
            input.form-control(name='password' type='password' placeholder='Senha')
          button.btn.btn-default(type='submit') Registrar!
      
